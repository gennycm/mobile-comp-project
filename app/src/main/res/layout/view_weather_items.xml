<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- Layout for each item in Recycler View that is a Card for each element in the Layout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:minWidth="150dp"
        android:layout_height="match_parent">

        <!--Weather Image Icon-->
        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

        <!--Temperature Label-->
        <TextView
            android:id="@+id/lblTempeature"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:text="@string/weather_temprature"/>

        <!--Description Label-->
        <TextView
            android:id="@+id/lblDescription"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:text="@string/weather_item_description"/>

        <!--Date Label-->
        <TextView
            android:id="@+id/lblDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:text="@string/weather_item_date"/>

        <!--Time Label-->
        <TextView
            android:id="@+id/lblTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:text="@string/weather_item_time"/>

    </LinearLayout>

</android.support.v7.widget.CardView>



